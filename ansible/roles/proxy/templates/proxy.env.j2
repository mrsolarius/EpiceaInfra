# ========================================
# Traefik Environment Variables
# Générée par Ansible pour {{ deploy_environment }}
# ========================================

# Timezone
TZ={{ timezone }}

# Domaines
BASE_DOMAIN={{ base_domain }}
TRAEFIK_DOMAIN={{ service_domains.traefik }}

# Let's Encrypt
ACME_EMAIL={{ traefik_acme_email | default('admin@' + base_domain) }}

# TLS
TRAEFIK_TLS_ENABLED={{ 'true' if proxy_enable_letsencrypt else 'false' }}
TRAEFIK_CERT_RESOLVER={{ 'letsencrypt' if proxy_enable_letsencrypt else '' }}

# Authentification dashboard
TRAEFIK_AUTH={{ traefik_auth | replace('$', '$$') }}

# Log level
LOG_LEVEL={{ traefik_log_level }}

# Let's Encrypt (static config via environment variable)
TRAEFIK_CERTIFICATESRESOLVERS_LETSENCRYPT_ACME_EMAIL={{ traefik_acme_email | default('admin@' + base_domain) }}
