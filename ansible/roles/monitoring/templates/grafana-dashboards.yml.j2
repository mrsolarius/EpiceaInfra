# ========================================
# Grafana Dashboards Provisioning
# ========================================

apiVersion: 1

providers:
  - name: 'Epicea Dashboards'
    orgId: 1
    folder: 'Epicea'
    type: file
    disableDeletion: false
    updateIntervalSeconds: 30
    allowUiUpdates: true
    options:
      path: /etc/grafana/provisioning/dashboards
      foldersFromFilesStructure: false
