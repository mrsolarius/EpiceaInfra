# Database Connection (using dedicated Immich PostgreSQL)
DB_HOSTNAME=immich-postgres
DB_USERNAME={{ immich_db_username }}
DB_PASSWORD={{ immich_db_password }}
DB_DATABASE_NAME={{ immich_db_database }}

# PostgreSQL Initialization (used by postgres container)
POSTGRES_USER={{ immich_db_username }}
POSTGRES_PASSWORD={{ immich_db_password }}
POSTGRES_DB={{ immich_db_database }}
POSTGRES_INITDB_ARGS="--data-checksums"

# Redis Connection (using shared Redis instance)
REDIS_HOSTNAME=redis
REDIS_PASSWORD={{ redis_password }}

# Permissions
PUID={{ system_user }}
PGID={{ system_group }}

# Paths & Network
TZ={{ timezone }}
DB_PATH={{ storage.databases.immich }}
UPLOAD_PATH={{ storage.media.immich_photos }}
MODEL_CACHE_PATH={{ storage.ansible.compose }}/immich/model-cache
PROXY_NETWORK={{ proxy_network_name }}
IMMICH_DOMAIN={{ service_domains.immich }}
