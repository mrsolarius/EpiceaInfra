services:
  nextcloud-db:
    image: postgres:{{ docker_versions.common.postgres }}
    container_name: nextcloud-db
    restart: {{ docker_restart_policy }}
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 512M
        reservations:
          cpus: '0.1'
          memory: 128M
    env_file: .env
    command: ["postgres", "-c", "shared_preload_libraries=pg_stat_statements"]
    volumes:
      - ${NEXTCLOUD_DB_DATA_PATH}:/var/lib/postgresql/data
      - ./init-db.sql:/docker-entrypoint-initdb.d/init.sql
    networks:
      - default
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER} -d ${POSTGRES_DB}"]
      interval: 5s
      timeout: 5s
      retries: 5

  nextcloud:
    image: nextcloud:{{ docker_versions.nextcloud }}
    container_name: nextcloud
    restart: {{ docker_restart_policy }}
    depends_on:
      nextcloud-db:
        condition: service_healthy
    deploy:
      resources:
        limits:
          cpus: '1.0'
          memory: 1G
        reservations:
          cpus: '0.2'
          memory: 512M
    env_file: .env
    volumes:
      - ${NEXTCLOUD_HTML_PATH}:/var/www/html
      - ${NEXTCLOUD_DATA_PATH}:/var/www/html/data
    networks:
      - default
      - proxy
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network={{ proxy_network_name }}"
      - "traefik.http.routers.nextcloud-http.rule=Host(`${NEXTCLOUD_TRUSTED_DOMAINS}`)"
      - "traefik.http.routers.nextcloud-http.entrypoints=web"
      - "traefik.http.routers.nextcloud-http.service=nextcloud"
      - "traefik.http.routers.nextcloud-https.rule=Host(`${NEXTCLOUD_TRUSTED_DOMAINS}`)"
      - "traefik.http.routers.nextcloud-https.entrypoints=websecure"
      - "traefik.http.routers.nextcloud-https.service=nextcloud"
      - "traefik.http.routers.nextcloud-https.tls=true"
      - "traefik.http.routers.nextcloud-https.tls.certresolver={{ 'letsencrypt' if proxy_enable_letsencrypt else '' }}"
      - "traefik.http.middlewares.nextcloud-dav.redirectregex.regex=^/.well-known/(card|cal)dav"
      - "traefik.http.middlewares.nextcloud-dav.redirectregex.replacement=/remote.php/dav/"
      - "traefik.http.routers.nextcloud-http.middlewares=nextcloud-dav"
      - "traefik.http.routers.nextcloud-https.middlewares=nextcloud-dav"
      - "traefik.http.services.nextcloud.loadbalancer.server.port=80"

  nextcloud-postgres-exporter:
    image: prometheuscommunity/postgres-exporter:{{ docker_versions.common.postgres_exporter }}
    container_name: nextcloud-postgres-exporter
    restart: {{ docker_restart_policy }}
    deploy:
      resources:
        limits:
          cpus: '0.1'
          memory: 128M
    environment:
      DATA_SOURCE_NAME: "postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@nextcloud-db:5432/${POSTGRES_DB}?sslmode=disable"
      PG_EXPORTER_DISABLE_DEFAULT_METRICS: "false"
      PG_EXPORTER_CONSTANT_LABELS: "instance=nextcloud"
      PG_EXPORTER_EXTEND_QUERY_PATH: "/etc/postgres-exporter/queries.yaml"
    volumes:
      - ./postgres-exporter-queries.yaml:/etc/postgres-exporter/queries.yaml:ro
    networks:
      - default
      - monitoring
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost:9187/"]
      interval: 30s
      timeout: 10s
      retries: 3

networks:
  default:
  monitoring:
    name: {{ monitoring_network_name }}
    external: true
  proxy:
    name: {{ proxy_network_name }}
    external: true

