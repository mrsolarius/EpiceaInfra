---
# Ce fichier doit être chiffré avec: ansible-vault encrypt vault.yml
# Pour éditer: ansible-vault edit vault.yml

# ========================================
# Traefik
# ========================================
# Générer avec: htpasswd -nb admin VotreMotDePasse
# Par défaut: admin / admin
traefik_auth: "admin:$apr1$H6uskkkW$IgXLP6ewTrSuBkTrqE8wj/"

# Let's Encrypt
traefik_acme_email: "admin@votre-domaine.fr"

# ========================================
# PostgreSQL mutualisé
# ========================================
postgres_root_password: "ChangeMe_RootPostgres123!"
postgres_replication_password: "ChangeMe_Replication123!"

# Databases & Users
postgres_databases:
  nextcloud:
    user: "nextcloud"
    password: "ChangeMe_NextcloudDB123!"
  immich:
    user: "immich"
    password: "ChangeMe_ImmichDB123!"
  grafana:
    user: "grafana"
    password: "ChangeMe_GrafanaDB123!"

# ========================================
# Redis mutualisé
# ========================================
redis_password: "ChangeMe_Redis123!"

# ========================================
# Immich
# ========================================
immich_db_password: "{{ postgres_databases.immich.password }}"
immich_db_username: "{{ postgres_databases.immich.user }}"
immich_db_database: "immich"

# ========================================
# Nextcloud
# ========================================
nextcloud_admin_user: "admin"
nextcloud_admin_password: "ChangeMe_NextcloudAdmin123!"
nextcloud_db_password: "{{ postgres_databases.nextcloud.password }}"
nextcloud_db_user: "{{ postgres_databases.nextcloud.user }}"
nextcloud_db_database: "nextcloud"

# ========================================
# Jellyfin
# ========================================
# Pas de secrets requis (configuration via web UI)

# ========================================
# Grafana
# ========================================
grafana_admin_user: "admin"
grafana_admin_password: "ChangeMe_GrafanaAdmin123!"
grafana_db_password: "{{ postgres_databases.grafana.password }}"
grafana_secret_key: "ChangeMe_GrafanaSecretKey123!"

# ========================================
# AMP (CubeCoders)
# ========================================
amp_license_key: ""  # Optionnel
amp_admin_password: "ChangeMe_AMP123!"

# ========================================
# Notifications (optionnel)
# ========================================
# Discord
discord_webhook_url: ""

# Telegram
telegram_bot_token: ""
telegram_chat_id: ""

# ========================================
# Backup (optionnel)
# ========================================
# Chiffrement backups
backup_encryption_password: "ChangeMe_BackupEncryption123!"

# Backblaze B2 (stockage cloud optionnel)
b2_account_id: ""
b2_account_key: ""
b2_bucket_name: "epicea-backups"
